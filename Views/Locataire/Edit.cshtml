@{
    Layout = "~/Views/Shared/_LayoutLocat2.cshtml";
}
@model LoyerVoiture.Models.Utilisateur

@{
    ViewBag.Title = "Edit";
}

<h2 style="color: #0064d2; "> Modify  your profile</h2>

<div class="container">
    @using (Html.BeginForm("Edit", "Locataire", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.statut)

        <p>
            <label>Second name</label>
            <div class="text">
                @Html.EditorFor(model => model.nom, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(model => model.nom, "", new { @class = "text-danger" })
        </p>

        <p>
            <label>First name</label>

            <div class="text">
                @Html.EditorFor(model => model.prenom, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            @Html.ValidationMessageFor(model => model.prenom, "", new { @class = "text-danger" })

        </p>

        <p>
            <label> Email</label>
            <div class="text">
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
        </p>

        <p>
            <label> Password </label>
            <div class="text">
                @Html.EditorFor(model => model.mdp, new { htmlAttributes = new { @class = "form-control" } })

            </div>
            @Html.ValidationMessageFor(model => model.mdp, "", new { @class = "text-danger" })
        </p>

        <p>
            <label> Confirm password</label>
            <div class="text">
                @Html.EditorFor(model => model.remdp, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(model => model.remdp, "", new { @class = "text-danger" })
        </p>

        <p>
            <label> City</label>
            <div class="text">
                @Html.EditorFor(model => model.ville, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(model => model.ville, "", new { @class = "text-danger" })

        </p>

        <p>
            <label> Adress</label>
            <div class="text">
                @Html.EditorFor(model => model.Adresse, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(model => model.Adresse, "", new { @class = "text-danger" })

        </p>

        <p>
            <label> CIN</label>
            <div class="text">
                @Html.EditorFor(model => model.CIN, new { htmlAttributes = new { @class = "form-control" } })

            </div>
            @Html.ValidationMessageFor(model => model.CIN, "", new { @class = "text-danger" })
        </p>

        <p>
            <label> Phone </label>
            <div class="text">
                @Html.EditorFor(model => model.Tel, new { htmlAttributes = new { @class = "form-control" } })

            </div>
            @Html.ValidationMessageFor(model => model.Tel, "", new { @class = "text-danger" })
        </p>


   

    <br />

    <div>
        <input type="submit" value="Save" class="btn btn-primary" />
        @Html.ActionLink("Return", "Index", 1, new { @class = "btn btn-primary" })
    </div>
    }
</div>
<style>

    .text {
        background-color: rgba(48, 80, 150, 0.349);
        width: 45em;
        border-radius: 10px;
        padding: 10px;
    }
    label{
        color:yellow;
    }

</style>